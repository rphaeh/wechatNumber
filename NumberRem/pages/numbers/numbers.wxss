.changeLayout{
  position: fixed;
  right:30rpx;
  top:30rpx;
  width:80rpx;
  height:80rpx;
  background:red;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.picsContainer {
  display: flex;
  direction: row;
  flex-flow: wrap;
  background: white;
  justify-content: space-between;
  margin: 0rpx;
  font-size: 0px;
}

.isShow{
  display: block;
}

.isHidden{
  display: none;
}

.coverbg{
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top:0;
  left: 0;
  margin:auto;
}

.content{
  background: blue;
  height: 170rpx;
  width: 131rpx;
}

.img{
